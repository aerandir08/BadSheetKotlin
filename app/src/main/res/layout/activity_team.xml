                android:layout_height="20dp"
                android:text="@string/women_single" />

            <AutoCompleteTextView
                android:id="@+id/edit_name_9"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/text_game_7"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/mixed" />

            <AutoCompleteTextView
                android:id="@+id/edit_name_10"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <AutoCompleteTextView
                android:id="@+id/edit_name_11"
                android:layout_width="match_parent"
