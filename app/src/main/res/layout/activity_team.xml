                android:layout_height="50dp" />

            <TextView
                android:id="@+id/text_game_1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/_2_men_doubles" />

            <AutoCompleteTextView
                android:id="@+id/edit_name_2"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <AutoCompleteTextView
                android:id="@+id/edit_name_3"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/text_game_2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/women_doubles" />

            <AutoCompleteTextView
                android:id="@+id/edit_name_4"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <AutoCompleteTextView
                android:id="@+id/edit_name_5"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/text_game_3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/_1_men_single" />

            <AutoCompleteTextView
                android:id="@+id/edit_name_6"
